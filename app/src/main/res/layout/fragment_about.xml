<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.gc.materialdesign.views.ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:id="@+id/course_inner_time_cardView"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                card_view:cardUseCompatPadding="true"
                card_view:cardCornerRadius="0dp"
                android:layout_margin="8dp"
                android:clickable="false"
                android:layout_gravity="center_horizontal">

                <LinearLayout
                    android:id="@+id/ll_courseView_times"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:background="@color/white">
                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/profile_image_about1"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:src="@drawable/profile"
                        android:layout_gravity="center_horizontal"
                        app:border_width="2dp"
                        app:border_color="@color/colorPrimary"/>
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtNameLabel_about1"
                            android:layout_width="0dp"
                            android:padding="8dp"
                            android:gravity="left"
                            android:text="@string/about_name"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.35" />
                        <TextView
                            android:id="@+id/txtName_about1"
                            android:layout_width="0dp"
                            android:padding="8dp"
                            android:gravity="left"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.65" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtEmailLabel_about1"
                            android:layout_width="0dp"
                            android:padding="8dp"
                            android:gravity="left"
                            android:text="@string/about_email"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.35" />
                        <TextView
                            android:id="@+id/txtEmail_about1"
                            android:layout_width="0dp"
                            android:padding="8dp"
                            android:gravity="left"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.65" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/txtUnivLabel_about1"
                            android:layout_width="0dp"
                            android:padding="8dp"
                            android:text="@string/about_univ"
                            android:gravity="left"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.35" />
                        <TextView
                            android:id="@+id/txtUniv_about1"
                            android:layout_width="0dp"
                            android:padding="8dp"
                            android:gravity="left"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.65" />
                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                card_view:cardUseCompatPadding="true"
                card_view:cardCornerRadius="0dp"
                android:layout_margin="8dp"
                android:clickable="false"
                android:layout_gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:background="@color/white">
                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/profile_image_about2"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:src="@drawable/profile"
                        android:layout_gravity="center_horizontal"
                        app:border_width="2dp"
                        app:border_color="@color/colorPrimary"/>
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtNameLabel_about2"
                            android:layout_width="0dp"
                            android:padding="8dp"
                            android:gravity="left"
                            android:text="@string/about_name"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.35" />
                        <TextView
                            android:id="@+id/txtName_about2"
                            android:layout_width="0dp"
                            android:padding="8dp"
                            android:gravity="left"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.65" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtEmailLabel_about2"
                            android:layout_width="0dp"
                            android:padding="8dp"
                            android:gravity="left"
                            android:text="@string/about_email"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.35" />
                        <TextView
                            android:id="@+id/txtEmail_about2"
                            android:layout_width="0dp"
                            android:padding="8dp"
                            android:gravity="left"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.65" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtUnivLabel_about2"
                            android:layout_width="0dp"
                            android:padding="8dp"
                            android:text="@string/about_univ"
                            android:gravity="left"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.35" />
                        <TextView
                            android:id="@+id/txtUniv_about2"
                            android:layout_width="0dp"
                            android:padding="8dp"
                            android:gravity="left"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.65" />

                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>
    </com.gc.materialdesign.views.ScrollView>
</LinearLayout>