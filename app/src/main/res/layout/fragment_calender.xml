<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.disegnator.robotocalendar.RobotoCalendarView
        android:id="@+id/robotoCalendarPicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    </com.disegnator.robotocalendar.RobotoCalendarView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:elevation="5dp"
        android:background="@color/colorPrimary">



        <ae.ac.adec.coursefollowup.Lib.SlidingTabs.SlidingTabLayout
            android:background="@color/colorPrimary"
            android:id="@+id/sliding_tabs_calender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <!--
    <include  android:id="@+id/shadow_main_activity" layout="@layout/toolbar_shadow" />
    -->
    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager_calender"
        android:layout_gravity="center"
        android:layout_height="match_parent"
        android:layout_width="match_parent" />
</LinearLayout>
