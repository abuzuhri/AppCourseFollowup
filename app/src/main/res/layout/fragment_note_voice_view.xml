<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/flexible_space_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?colorPrimary"
        android:orientation="horizontal"
        android:paddingBottom="16dp"
        android:paddingLeft="45dp"
        android:paddingRight="16dp"
        android:elevation="5dp"
        android:paddingTop="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="Subject"
            android:paddingRight="35dp"
            android:layout_gravity="bottom|left"
            android:id="@+id/txtNoteSubject" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="Date"
            android:layout_gravity="bottom"
            android:id="@+id/txtNoteAddDate" />



    </LinearLayout>

    <include  android:id="@+id/shadow_main_activity" layout="@layout/toolbar_shadow" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="0.3"
    android:orientation="horizontal"
    android:layout_gravity="center">


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Play"
        android:id="@+id/playPauseVoiceBtn"
        android:padding="20dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.5"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:id="@+id/stopVoiceBtn"
        android:padding="20dp"
        android:layout_weight="0.5"
        android:layout_gravity="center_vertical" />
</LinearLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView2"
        android:layout_weight="0.2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="New Text"
            android:textSize="25sp"
            android:id="@+id/txtNoteDetail"
            android:layout_gravity="center_horizontal" />
    </ScrollView>

</LinearLayout>